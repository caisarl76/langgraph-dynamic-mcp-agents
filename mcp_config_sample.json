{
  "mcpServers": {
    "desktop-commander": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@wonderwhy-er/desktop-commander",
        "--key",
        "Smithery API_KEY 입력"
      ]
    },
    "perplexity-search": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@arjunkmrm/perplexity-search",
        "--config",
        "{\"perplexityApiKey\":\"Perplexity API_KEY 입력\"}"
      ]
    },
    "hyperbrowser": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@hyperbrowserai/mcp",
        "--key",
        "Smithery API_KEY 입력"
      ]
    },
    "todoist-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@miottid/todoist-mcp",
        "--key",
        "Smithery API_KEY 입력"
      ]
    }
  }
}